<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Internal Audit Portal</title>
  
  <!-- CRITICAL INLINE CSS - Loads instantly, prevents any flash -->
  <style>
    /* Prevent flash of unstyled content */
    html {
      background-color: #f8f9fa;
    }
    
    body {
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      background-color: #f8f9fa;
      color: #202124;
      opacity: 0;
      transition: opacity 0.2s ease-in;
    }
    
    body.ready {
      opacity: 1;
    }
    
    /* Page transition overlay - smooth transitions between pages */
    .page-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #f8f9fa;
      z-index: 9999;
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.15s ease-out;
    }
    
    body.transitioning .page-overlay {
      opacity: 1;
    }
    
    /* Loading indicator */
    .loading-bar {
      position: fixed;
      top: 0;
      left: 0;
      width: 0%;
      height: 3px;
      background: linear-gradient(90deg, #1a73e8, #00acc1);
      z-index: 10000;
      transition: width 0.3s ease-out;
    }
    
    body.loading .loading-bar {
      width: 100%;
    }
    
    /* Navbar placeholder - prevents layout shift */
    .navbar {
      height: 64px;
      background: #ffffff;
      border-bottom: 1px solid #dadce0;
      box-shadow: 0 1px 2px 0 rgba(60,64,67,.3);
    }
    
    /* Container placeholder */
    .container-fluid, .container {
      padding: 24px 32px;
    }
    
    /* Smooth content fade in */
    main {
      animation: contentFadeIn 0.2s ease-in;
    }
    
    @keyframes contentFadeIn {
      from {
        opacity: 0;
        transform: translateY(8px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
  
  <!-- Preconnect to external domains for faster loading -->
  <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
  <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
  <link rel="dns-prefetch" href="https://code.jquery.com">
  
  <!-- Preload critical resources -->
  <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" as="style">
  <link rel="preload" href="/css/style.css" as="style">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  
  <!-- Immediate script to show body as soon as possible -->
  <script>
    // Mark body as ready as soon as this script runs
    document.addEventListener('DOMContentLoaded', function() {
      document.body.classList.add('ready');
    });
    
    // Fallback in case DOMContentLoaded already fired
    if (document.readyState === 'interactive' || document.readyState === 'complete') {
      document.body.classList.add('ready');
    }
  </script>
</head>
<body>
  
  <!-- Page transition overlay -->
  <div class="page-overlay"></div>
  
  <!-- Loading bar -->
  <div class="loading-bar"></div>
  
  <% if (user) { %>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">
          <i class="bi bi-clipboard-check"></i> Audit Portal
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link smooth-nav" href="/dashboard">
                <i class="bi bi-house-door"></i> Dashboard
              </a>
            </li>
            
            <% if (user.role === 'head_of_audit') { %>
              <li class="nav-item">
                <a class="nav-link smooth-nav" href="/auditees">
                  <i class="bi bi-building"></i> Auditees
                </a>
              </li>
            <% } %>
            
            <li class="nav-item">
              <a class="nav-link smooth-nav" href="/audits">
                <i class="bi bi-calendar3"></i> Audits
              </a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link smooth-nav" href="/working-papers">
                <i class="bi bi-file-earmark-text"></i> Working Papers
              </a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link smooth-nav" href="/issues">
                <i class="bi bi-exclamation-triangle"></i> Issues
              </a>
            </li>
            
            <% if (user.role === 'head_of_audit' || user.role === 'manager') { %>
              <li class="nav-item">
                <a class="nav-link smooth-nav" href="/issues/verify">
                  <i class="bi bi-check-circle"></i> Verify Issues
                </a>
              </li>
            <% } %>
          </ul>
          
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle"></i> <%= user.name %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> Settings</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <% } %>

  <!-- Flash Messages -->
  <% if (success_msg && success_msg.length > 0) { %>
    <div class="container mt-3">
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="container mt-3">
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  
  <% if (error && error.length > 0) { %>
    <div class="container mt-3">
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <!-- Main Content -->
  <main class="<%= user ? 'container-fluid' : 'container' %> mt-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-light text-center text-lg-start mt-5">
    <div class="text-center p-3">
      Â© 2025 Internal Audit Portal
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
  
  <!-- Smooth navigation script -->
  <script>
    (function() {
      // Show body immediately when script runs
      document.body.classList.add('ready');
      
      // Add smooth page transitions on navigation
      const smoothNavLinks = document.querySelectorAll('.smooth-nav, .navbar-brand');
      
      smoothNavLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          // Don't interfere with modifier keys (ctrl, cmd, etc)
          if (e.ctrlKey || e.metaKey || e.shiftKey) {
            return;
          }
          
          // Show brief transition overlay
          document.body.classList.add('transitioning');
          document.body.classList.add('loading');
          
          // Let the browser navigate normally
          // The overlay will be visible during the navigation
        });
      });
      
      // Remove transition class after page loads
      window.addEventListener('pageshow', function() {
        document.body.classList.remove('transitioning', 'loading');
        document.body.classList.add('ready');
      });
      
      // Performance optimization: Prefetch on hover
      smoothNavLinks.forEach(link => {
        link.addEventListener('mouseenter', function() {
          const url = this.getAttribute('href');
          if (url && url.startsWith('/')) {
            // Create prefetch link
            const prefetch = document.createElement('link');
            prefetch.rel = 'prefetch';
            prefetch.href = url;
            document.head.appendChild(prefetch);
          }
        });
      });
    })();
  </script>
</body>
</html>
