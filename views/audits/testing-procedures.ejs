<!DOCTYPE html>
<html>
<head>
  <title><%= title %> - Internal Audit Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .folder-card {
      border: 2px solid #dee2e6;
      border-radius: 8px;
      transition: all 0.3s;
      cursor: pointer;
    }
    
    .folder-card:hover {
      border-color: var(--primary);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transform: translateY(-2px);
    }
    
    .folder-card.active {
      border-color: var(--primary);
      background-color: #f8f9fa;
    }
    
    .folder-icon {
      font-size: 48px;
      color: #ffc107;
    }
    
    .working-paper-item {
      border: 1px solid #dee2e6;
      border-radius: 6px;
      padding: 12px;
      margin-bottom: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: white;
    }
    
    .working-paper-item:hover {
      background-color: #f8f9fa;
    }
    
    .badge-columns {
      background-color: #6c757d;
      color: white;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  <%- include('../partials/messages') %>
  
  <div class="container-fluid">
    <!-- Header -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="mb-2"><%= audit.audit_name %></h2>
            <p class="mb-0 text-muted">
              <i class="bi bi-building"></i> <%= audit.auditee_name %> | 
              <i class="bi bi-person"></i> <%= audit.team_leader_name %>
            </p>
          </div>
          <a href="/audits/<%= audit.id %>" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Workspace
          </a>
        </div>
      </div>
    </div>
    
    <% if (auditAreas.length === 0) { %>
      <!-- No Selected Areas -->
      <div class="card">
        <div class="card-body text-center py-5">
          <i class="bi bi-folder-x text-muted" style="font-size: 64px;"></i>
          <h4 class="mt-3">No Audit Areas Selected</h4>
          <p class="text-muted mb-4">
            Please go to Risk Assessment and select audit areas to create folders here.
          </p>
          <a href="/audits/<%= audit.id %>" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Go to Risk Assessment
          </a>
        </div>
      </div>
    <% } else { %>
      <!-- Folders and Working Papers -->
      <div class="row">
        <!-- Left: Folders List -->
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="bi bi-folder"></i> Audit Areas
              </h5>
              <small class="text-muted"><%= auditAreas.length %> folder(s)</small>
            </div>
            <div class="card-body p-2">
              <% auditAreas.forEach((area, index) => { 
                const isActive = selectedFolderId == area.id || (!selectedFolderId && index === 0);
                const attachedCount = attachedWPs.filter(wp => wp.risk_assessment_id === area.id).length;
              %>
                <div class="folder-card p-3 mb-2 <%= isActive ? 'active' : '' %>" 
                     onclick="selectFolder(<%= area.id %>)">
                  <div class="d-flex align-items-center">
                    <i class="bi bi-folder-fill folder-icon me-3"></i>
                    <div class="flex-grow-1">
                      <h6 class="mb-1"><%= area.audit_area %></h6>
                      <small class="text-muted">
                        <span class="badge bg-<%= area.score === 'High' ? 'danger' : area.score === 'Medium' ? 'warning' : 'success' %>">
                          <%= area.score %>
                        </span>
                        <% if (attachedCount > 0) { %>
                          | <i class="bi bi-file-earmark-text"></i> <%= attachedCount %> WP(s)
                        <% } %>
                      </small>
                    </div>
                    <% if (isActive) { %>
                      <i class="bi bi-chevron-right text-primary"></i>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
        
        <!-- Right: Working Papers for Selected Folder -->
        <div class="col-md-8">
          <% 
            const selectedArea = selectedFolderId 
              ? auditAreas.find(a => a.id == selectedFolderId) 
              : auditAreas[0];
            const selectedId = selectedArea ? selectedArea.id : null;
            const attachedForArea = selectedId 
              ? attachedWPs.filter(wp => wp.risk_assessment_id == selectedId) 
              : [];
          %>
          
          <% if (selectedArea) { %>
            <div class="card mb-3">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                  <i class="bi bi-folder-open"></i> <%= selectedArea.audit_area %>
                </h5>
              </div>
              <div class="card-body">
                <div class="row mb-3">
                  <div class="col-md-6">
                    <small class="text-muted">Process:</small>
                    <p class="mb-2"><%= selectedArea.process || 'N/A' %></p>
                  </div>
                  <div class="col-md-6">
                    <small class="text-muted">Assigned Auditor:</small>
                    <p class="mb-2"><%= selectedArea.auditor_name || 'Unassigned' %></p>
                  </div>
                </div>
                
                <div class="alert alert-info">
                  <i class="bi bi-info-circle"></i>
                  <strong>Instructions:</strong> Attach working papers to this audit area below. You can then fill them in during field work.
                </div>
              </div>
            </div>
            
            <!-- Attached Working Papers -->
            <div class="card mb-3">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                  <i class="bi bi-paperclip"></i> Attached Working Papers
                </h6>
                <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#attachModal">
                  <i class="bi bi-plus-circle"></i> Attach Working Paper
                </button>
              </div>
              <div class="card-body">
                <% if (attachedForArea.length === 0) { %>
                  <div class="text-center py-4 text-muted">
                    <i class="bi bi-file-earmark" style="font-size: 48px;"></i>
                    <p class="mt-2">No working papers attached yet</p>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#attachModal">
                      Attach Your First Working Paper
                    </button>
                  </div>
                <% } else { %>
                  <% attachedForArea.forEach(attached => { 
                    const wp = workingPapers.find(w => w.id === attached.working_paper_id);
                    if (!wp) return;
                  %>
                    <div class="working-paper-item">
                      <div class="d-flex align-items-center flex-grow-1">
                        <i class="bi bi-file-earmark-text text-primary me-3" style="font-size: 24px;"></i>
                        <div>
                          <h6 class="mb-0"><%= wp.name %></h6>
                          <small class="text-muted">
                            <span class="badge-columns">
                              <i class="bi bi-columns"></i> <%= wp.column_count %> columns
                            </span>
                            <% if (wp.allow_add_rows) { %>
                              | <i class="bi bi-plus-square text-success"></i> Can add rows
                            <% } else { %>
                              | <i class="bi bi-lock text-warning"></i> Fixed rows
                            <% } %>
                          </small>
                        </div>
                      </div>
                      <div class="btn-group">
                        <a href="/working-papers/<%= wp.id %>/view?audit=<%= audit.id %>&area=<%= selectedId %>" 
                           class="btn btn-sm btn-outline-primary" 
                           title="View/Fill Working Paper">
                          <i class="bi bi-eye"></i> View
                        </a>
                        <button class="btn btn-sm btn-outline-danger" 
                                onclick="detachWorkingPaper(<%= selectedId %>, <%= wp.id %>)"
                                title="Remove from this folder">
                          <i class="bi bi-trash"></i>
                        </button>
                      </div>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </div>
            
            <!-- Available Working Papers to Attach -->
            <div class="card">
              <div class="card-header">
                <h6 class="mb-0">
                  <i class="bi bi-files"></i> All Available Working Papers
                </h6>
              </div>
              <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                <% if (workingPapers.length === 0) { %>
                  <p class="text-muted text-center py-3">
                    No working papers created yet. 
                    <a href="/working-papers/create">Create one</a>
                  </p>
                <% } else { %>
                  <div class="list-group">
                    <% workingPapers.forEach(wp => { 
                      const isAttached = attachedForArea.some(a => a.working_paper_id === wp.id);
                    %>
                      <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                          <h6 class="mb-0"><%= wp.name %></h6>
                          <small class="text-muted">
                            <%= wp.column_count %> columns
                            <% if (isAttached) { %>
                              | <span class="badge bg-success">Attached</span>
                            <% } %>
                          </small>
                        </div>
                        <% if (!isAttached) { %>
                          <button class="btn btn-sm btn-primary" 
                                  onclick="attachWorkingPaper(<%= selectedId %>, <%= wp.id %>)">
                            <i class="bi bi-plus"></i> Attach
                          </button>
                        <% } else { %>
                          <button class="btn btn-sm btn-outline-secondary" disabled>
                            <i class="bi bi-check"></i> Attached
                          </button>
                        <% } %>
                      </div>
                    <% }) %>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function selectFolder(folderId) {
      window.location.href = '/audits/<%= audit.id %>/testing-procedures?folder=' + folderId;
    }
    
    function attachWorkingPaper(areaId, wpId) {
      fetch('/audits/<%= audit.id %>/testing-procedures/' + areaId + '/attach', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ working_paper_id: wpId })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert('Failed to attach working paper');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error attaching working paper');
      });
    }
    
    function detachWorkingPaper(areaId, wpId) {
      if (!confirm('Remove this working paper from this folder?')) return;
      
      fetch('/audits/<%= audit.id %>/testing-procedures/' + areaId + '/detach', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ working_paper_id: wpId })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert('Failed to detach working paper');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error detaching working paper');
      });
    }
  </script>
</body>
</html>
