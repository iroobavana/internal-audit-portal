<!DOCTYPE html>
<html>
<head>
  <title><%= title %> - Internal Audit Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .column-card {
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 12px;
      background: white;
    }
    
    .column-type-badge {
      font-size: 12px;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  <%- include('../partials/messages') %>
  
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><%= workingPaper.name %></h1>
      <div>
        <a href="/working-papers/<%= workingPaper.id %>/edit" class="btn btn-warning">
          <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="/working-papers" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Back
        </a>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Working Paper Details</h5>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-md-6">
                <strong>Name:</strong> <%= workingPaper.name %>
              </div>
              <div class="col-md-6">
                <strong>Allow Row Insert:</strong> 
                <span class="badge bg-<%= workingPaper.allow_row_insert ? 'success' : 'secondary' %>">
                  <%= workingPaper.allow_row_insert ? 'Yes' : 'No' %>
                </span>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <strong>Created By:</strong> <%= workingPaper.created_by_name %>
              </div>
              <div class="col-md-6">
                <strong>Created At:</strong> <%= new Date(workingPaper.created_at).toLocaleString() %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Column Configuration (<%= columns.length %> columns)</h5>
          </div>
          <div class="card-body">
            <% if (columns.length === 0) { %>
              <p class="text-muted text-center">No columns configured</p>
            <% } else { %>
              <% columns.forEach((col, index) => { %>
                <div class="column-card">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <h6 class="mb-2">
                        <span class="badge bg-secondary me-2"><%= index + 1 %></span>
                        <%= col.column_name %>
                      </h6>
                      <span class="badge bg-primary column-type-badge">
                        <i class="bi bi-<%= getTypeIcon(col.column_type) %>"></i> 
                        <%= formatType(col.column_type) %>
                      </span>
                      
                      <% if (col.column_type === 'select' || col.column_type === 'multiselect') { %>
                        <% 
                          let options = [];
                          try {
                            options = JSON.parse(col.options);
                          } catch(e) {}
                        %>
                        <% if (options.length > 0) { %>
                          <div class="mt-2">
                            <small class="text-muted">Options:</small>
                            <div class="mt-1">
                              <% options.forEach(opt => { %>
                                <span class="badge bg-light text-dark me-1"><%= opt %></span>
                              <% }) %>
                            </div>
                          </div>
                        <% } %>
                      <% } %>
                      
                      <% if (col.column_type === 'formula' && col.formula) { %>
                        <div class="mt-2">
                          <small class="text-muted">Formula:</small>
                          <code class="ms-2"><%= col.formula %></code>
                        </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Preview</h5>
          </div>
          <div class="card-body">
            <div style="overflow-x: auto;">
              <table class="table table-bordered table-sm">
                <thead>
                  <tr>
                    <% columns.forEach(col => { %>
                      <th style="white-space: nowrap;">
                        <i class="bi bi-<%= getTypeIcon(col.column_type) %>"></i>
                        <%= col.column_name %>
                      </th>
                    <% }) %>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% columns.forEach(col => { %>
                      <td>
                        <% if (col.column_type === 'formula') { %>
                          <span class="badge bg-secondary">Calc</span>
                        <% } else { %>
                          -
                        <% } %>
                      </td>
                    <% }) %>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        
        <div class="card mt-3">
          <div class="card-header">
            <h5 class="mb-0">Actions</h5>
          </div>
          <div class="card-body">
            <a href="/working-papers/<%= workingPaper.id %>/edit" class="btn btn-warning w-100 mb-2">
              <i class="bi bi-pencil"></i> Edit Working Paper
            </a>
            <button class="btn btn-danger w-100" onclick="deleteWP()">
              <i class="bi bi-trash"></i> Delete Working Paper
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function deleteWP() {
      if (confirm('Are you sure you want to delete this working paper?\n\nThis action cannot be undone.')) {
        fetch('/working-papers/<%= workingPaper.id %>/delete', {
          method: 'POST'
        })
        .then(response => {
          if (response.ok) {
            window.location.href = '/working-papers';
          } else {
            alert('Error deleting working paper');
          }
        });
      }
    }
  </script>
</body>
</html>

<%
function getTypeIcon(type) {
  const icons = {
    'text': 'fonts',
    'number': '123',
    'date': 'calendar3',
    'select': 'check-circle',
    'multiselect': 'check2-square',
    'file': 'paperclip',
    'url': 'link-45deg',
    'formula': 'calculator'
  };
  return icons[type] || 'square';
}

function formatType(type) {
  const types = {
    'text': 'Text',
    'number': 'Number',
    'date': 'Date',
    'select': 'Select',
    'multiselect': 'Multi-Select',
    'file': 'File Upload',
    'url': 'URL',
    'formula': 'Formula'
  };
  return types[type] || type;
}
%>
