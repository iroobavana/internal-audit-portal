<aside class="sidebar">
  <div class="sidebar-header">
    <div class="logo">
      <i class="bi bi-shield-check"></i>
      <span>Internal Audit</span>
    </div>
  </div>
  
  <nav class="sidebar-nav">
    <% if (user.role === 'system_admin') { %>
      <!-- System Admin Menu -->
      <a href="/admin/dashboard" class="nav-item <%= title === 'System Admin Dashboard' ? 'active' : '' %>">
        <i class="bi bi-speedometer2"></i>
        <span>Dashboard</span>
      </a>
      
      <a href="/admin/organizations" class="nav-item <%= title === 'Manage Organizations' ? 'active' : '' %>">
        <i class="bi bi-building"></i>
        <span>Organizations</span>
      </a>
      
      <a href="/admin/users" class="nav-item <%= title === 'Manage Users' ? 'active' : '' %>">
        <i class="bi bi-people"></i>
        <span>Users</span>
      </a>
    <% } else { %>
      <!-- Regular User Menu -->
      <a href="/dashboard" class="nav-item <%= title === 'Dashboard' ? 'active' : '' %>">
        <i class="bi bi-house-door"></i>
        <span>Dashboard</span>
      </a>
      
      <a href="/audits" class="nav-item <%= title === 'Audits' || (title.includes('Audit') && title !== 'Audit Universe') ? 'active' : '' %>">
        <i class="bi bi-clipboard-check"></i>
        <span>Audits</span>
      </a>
      
      <% if (user.role === 'head_of_audit') { %>
        <a href="/auditees" class="nav-item <%= title === 'Auditees' ? 'active' : '' %>">
          <i class="bi bi-building"></i>
          <span>Auditees</span>
        </a>
        
        <a href="/audits/audit-universe-all" class="nav-item <%= title === 'Audit Universe' ? 'active' : '' %>">
          <i class="bi bi-globe"></i>
          <span>Audit Universe</span>
        </a>
      <% } %>
      
      <a href="/working-papers" class="nav-item <%= title === 'Working Papers' ? 'active' : '' %>">
        <i class="bi bi-file-earmark-spreadsheet"></i>
        <span>Working Papers</span>
      </a>
      
      <% if (user.role === 'manager' || user.role === 'head_of_audit') { %>
        <a href="/issues/verify" class="nav-item">
          <i class="bi bi-check-circle"></i>
          <span>Verify Issues</span>
        </a>
      <% } %>
      
      <a href="/issues/issues-register" class="nav-item">
        <i class="bi bi-journal-text"></i>
        <span>Issues Register</span>
      </a>
      
      <a href="/issues/follow-up-tracker" class="nav-item">
        <i class="bi bi-arrow-repeat"></i>
        <span>Follow-up Tracker</span>
      </a>
    <% } %>
    
    <div class="nav-divider"></div>
    
    <a href="/profile" class="nav-item">
      <i class="bi bi-person-circle"></i>
      <span>Profile</span>
    </a>
    
    <a href="/logout" class="nav-item">
      <i class="bi bi-box-arrow-right"></i>
      <span>Logout</span>
    </a>
  </nav>
  
  <div class="sidebar-footer">
    <div class="user-info">
      <div class="user-avatar">
        <%= user.name.charAt(0).toUpperCase() %>
      </div>
      <div class="user-details">
        <div class="user-name"><%= user.name %></div>
        <div class="user-role"><%= user.role.replace('_', ' ') %></div>
      </div>
    </div>
  </div>
</aside>

