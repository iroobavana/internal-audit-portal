<!DOCTYPE html>
<html>
<head>
  <title><%= title %> - Internal Audit Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  <%- include('../partials/messages') %>
  
  <div class="container mt-4">
    <h1><i class="bi bi-pencil"></i> Edit Auditee</h1>
    
    <div class="card mt-4">
      <div class="card-body">
        <form action="/auditees/<%= auditee.id %>?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Auditee Name *</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= auditee.name %>" required>
          </div>
          
          <div class="mb-3">
            <label for="official_email" class="form-label">Official Email *</label>
            <input type="email" class="form-control" id="official_email" name="official_email" value="<%= auditee.official_email %>" required>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Departments/Sections</label>
            <div id="departments-container">
              <% if (departments.length === 0) { %>
                <div class="input-group mb-2">
                  <input type="text" class="form-control" name="departments[]" placeholder="Department name">
                  <button type="button" class="btn btn-outline-danger remove-dept" style="display:none;">
                    <i class="bi bi-x"></i>
                  </button>
                </div>
              <% } else { %>
                <% departments.forEach(dept => { %>
                  <div class="input-group mb-2">
                    <input type="text" class="form-control" name="departments[]" value="<%= dept.department_name %>" placeholder="Department name">
                    <button type="button" class="btn btn-outline-danger remove-dept">
                      <i class="bi bi-x"></i>
                    </button>
                  </div>
                <% }) %>
              <% } %>
            </div>
            <button type="button" class="btn btn-sm btn-success" id="add-department">
              <i class="bi bi-plus"></i> Add Department
            </button>
          </div>
          
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/auditees/<%= auditee.id %>" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-save"></i> Update Auditee
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('add-department').addEventListener('click', function() {
      const container = document.getElementById('departments-container');
      const newDiv = document.createElement('div');
      newDiv.className = 'input-group mb-2';
      newDiv.innerHTML = `
        <input type="text" class="form-control" name="departments[]" placeholder="Department name">
        <button type="button" class="btn btn-outline-danger remove-dept">
          <i class="bi bi-x"></i>
        </button>
      `;
      container.appendChild(newDiv);
      
      newDiv.querySelector('.remove-dept').addEventListener('click', function() {
        newDiv.remove();
      });
    });
    
    document.querySelectorAll('.remove-dept').forEach(btn => {
      btn.addEventListener('click', function() {
        this.closest('.input-group').remove();
      });
    });
  </script>
</body>
</html>
