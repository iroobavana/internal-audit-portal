<!DOCTYPE html>
<html>
<head>
  <title><%= title %> - Internal Audit Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  <%- include('../partials/messages') %>
  
  <div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="bi bi-building"></i> <%= auditee.name %></h1>
      <div>
        <a href="/auditees/<%= auditee.id %>/audit-universe" class="btn btn-success me-2">
          <i class="bi bi-grid"></i> Audit Universe
        </a>
        <a href="/auditees/<%= auditee.id %>/edit" class="btn btn-warning me-2">
          <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="/auditees" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Back
        </a>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Auditee Information</h5>
          </div>
          <div class="card-body">
            <p><strong>Name:</strong> <%= auditee.name %></p>
            <p><strong>Official Email:</strong> <%= auditee.official_email %></p>
            <p><strong>Created:</strong> <%= new Date(auditee.created_at).toLocaleDateString() %></p>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0">Departments/Sections</h5>
          </div>
          <div class="card-body">
            <% if (departments.length === 0) { %>
              <p class="text-muted">No departments added</p>
            <% } else { %>
              <ul class="list-group">
                <% departments.forEach(dept => { %>
                  <li class="list-group-item">
                    <i class="bi bi-folder"></i> <%= dept.department_name %>
                  </li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
