<!DOCTYPE html>
<html>
<head>
  <title><%= title %> - Internal Audit Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  <%- include('../partials/messages') %>
  
  <div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="bi bi-building"></i> Auditees</h1>
      <a href="/auditees/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create Auditee
      </a>
    </div>
    
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Official Email</th>
                <th>Departments</th>
                <th>Created At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (auditees.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center text-muted">No auditees found. Create your first auditee!</td>
                </tr>
              <% } else { %>
                <% auditees.forEach((auditee, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= auditee.name %></td>
                    <td><%= auditee.official_email %></td>
                    <td><%= auditee.department_count %> departments</td>
                    <td><%= new Date(auditee.created_at).toLocaleDateString() %></td>
                    <td>
                      <a href="/auditees/<%= auditee.id %>" class="btn btn-sm btn-info" title="View">
                        <i class="bi bi-eye"></i>
                      </a>
                      <a href="/auditees/<%= auditee.id %>/audit-universe" class="btn btn-sm btn-success" title="Audit Universe">
                        <i class="bi bi-grid"></i>
                      </a>
                      <a href="/auditees/<%= auditee.id %>/edit" class="btn btn-sm btn-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <form action="/auditees/<%= auditee.id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Delete this auditee?');">
                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
